    <link href="~/Content/teste.css" rel="stylesheet">

</head>
<body>
    <div class="overlays"></div>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Cadastro de Produtos</h3>
                    <form action="/Produtos/Adiciona" method="post">
                        <div class="texto">
                        

                            <div class="row">
                                <div class=" form-group">
                                    <label for="Codigo">Codigo:</label>
                                    <input id="codigo" name="produto.codigo" />
                                </div>
                                <div class=" form-group">
                                    <label for="Codigo_de_Barra">Codigo de Barra:</label>
                                    <input id="Codigo_de_Barra" name="produto.Codigo_de_Barra" />
                                </div>
                                <div class=" form-group">
                                    <label for="nome">Nome:</label>
                                    <input id="nome" name="produto.nome" />
                                </div>
                                <div class=" form-group">
                                    <label for="data">Data:</label>
                                    <input id="data" name="produto.data" />
                                </div>
                                <div class=" form-group">
                                    <label for="descrição">Descrição:</label>
                                    <input id="descrição" name="produto.descrição" />
                                </div>
                                <div class=" form-group">
                                    <label for="quantidade">Quatidade:</label>
                                    <input id="quantidade" name="produto.quantidade" />
                                </div>
                                <div class=" form-group">
                                    <label for="valor">Valor:</label>
                                    <input id="valor" name="produto.valor" />
                                </div>
                                <div class="row">
                                    <div class=" form-group">
                                        <br/>
                                        <br/>
                                            <input type="submit" value="Cadastrar" />
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
