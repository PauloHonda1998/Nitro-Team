@model IEnumerable<Models.CadastrodeEmpresasColaboradoras>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Empresas Colaboradoras</h2>

<p>

    <a href="@Url.Action("Create", "CadastrodeEmpresasColaboradoras")" style="color: #ffffff">Adicionar Empresa</a>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Empresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>

                <a href="@Url.Action( "Edit", "CadastrodeEmpresasColaboradoras", new { id = item.IdEmpresa })" style="color: #ffffff">Editar |</a>
                <a href="@Url.Action( "Details", "CadastrodeEmpresasColaboradoras", new { id = item.IdEmpresa })" style="color: #ffffff">Detalhes |</a>
                <a href="@Url.Action( "Delete", "CadastrodeEmpresasColaboradoras", new { id = item.IdEmpresa })" style="color: #ffffff">Deletar </a>
            </td>
        </tr>
    }

</table>
