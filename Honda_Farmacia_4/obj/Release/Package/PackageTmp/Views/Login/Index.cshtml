@model Models.Farmaceutico
@{
    Layout = null;
}

@using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
{
    <html>
    <head>
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <link href="~/Content/Login.css" rel="stylesheet" />
    </head>

    <body class="hm-gradient">
        <div class="overlays"></div>
        <div class="container  mt-4">
            <div class="row" style="margin-left: 350px; color:white">
                

                <div class="col-sm-6 login-form-1">
                    <div class="d-flex justify-content-center h-100">
                        <div class="card">

                            <div class="texto">
                                <h3>Login </h3>
                                <div class="card-body">

                                    <div id="email">
                                        <a>@Html.LabelFor(Model => Model.Nome)</a>
                                        <a>@Html.EditorFor(Model => Model.Nome)</a>

                                    </div>
                                    <div>
                                        <a></a>
                                        <a>@Html.ValidationMessageFor(Model => Model.Nome)</a>
                                    </div>

                                    <div id="password">
                                        <a>@Html.LabelFor(Model => Model.Senha)</a>
                                        <a>@Html.PasswordFor(Model => Model.Senha)</a>
                                    </div>
                                    <div>
                                        <a></a>
                                        <a>@Html.ValidationMessageFor(Model => Model.Senha)</a>
                                    </div>


                                    <div>
                                        <a></a>
                                        <a><input class="botao" type="submit" name="name" value="Login" /></a>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.1/js/mdb.min.js"></script>
    </body>
</html>
}